{
  "manifest_version": 2,

  "name": "Openlogic Link Scraper",
  "description": "This extension can scrape all the links (optionally filtered by regex) from a page into the clipboard.",
  "version": "0.0.1",
  "permissions": [
    "tabs",
    "clipboardWrite",
    "webNavigation",
    "ftp://*/",
    "http://*/",
    "https://*/"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
